CFLAGS = -ansi -Wall -pedantic -std=c99
LFLAGS =  
CC = gcc


EXENAME=hr
SRC=src/
INSTALL_DIR=/usr/local/bin
MANFILE=hr.7
MANPATH=/usr/local/share/man/man7

all: hr.o

debug: CFLAGS += -DDEBUG -g
debug: hr.o

hr.o:
	$(CC) $(CFLAGS) $(SRC)/hr.c -o $(EXENAME)

clean:
	rm $(EXENAME)

install:
	cp $(EXENAME) $(INSTALL_DIR)/$(EXENAME)

install-man:
	mkdir -p $(MANPATH)
	cp $(MANFILE) $(MANPATH)/$(MANFILE)
	mandb

uninstall:
	rm $(INSTALL_DIR)/$(EXENAME)
	rm $(MANPATH)/$(MANFILE)

